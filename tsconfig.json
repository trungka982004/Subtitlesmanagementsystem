{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ES2020"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "outDir": "./dist"
    },
    "include": [
        "server/**/*",
        "scripts/**/*"
    ],
    "ts-node": {
        "transpileOnly": true
    }
}